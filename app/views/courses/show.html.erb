<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>

<br/>

<table class="table table-hover">
  <tbody>

    <% @questions.each do |q| %>
      <tr id="q-<%=q.id%>">
        <td>
          <%= link_to q.text, course_question_path(@course.id, q.id) %>
        </td>
      </tr>

      <script>
        $("#q-<%=q.id%>").on("click", function(){
          console.log("lol");
          window.location.href = "/courses/<%=@course.id%>/questions/<%=q.id%>";
        })
      </script>
    <% end %> 
  </tbody>

</table>
